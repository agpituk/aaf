{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RuntimeResponse",
  "description": "Response from the AWI runtime after executing an action.",
  "type": "object",
  "required": ["status", "action"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["completed", "needs_confirmation", "validation_error", "execution_error", "missing_required_fields"]
    },
    "action": {
      "type": "string"
    },
    "result": {
      "type": "string"
    },
    "log": {
      "type": "object"
    },
    "confirmation_metadata": {
      "type": "object",
      "properties": {
        "action": { "type": "string" },
        "risk": { "type": "string" },
        "scope": { "type": "string" },
        "title": { "type": "string" }
      },
      "required": ["action", "risk", "scope", "title"]
    },
    "error": {
      "type": "string"
    },
    "missing_fields": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": false
}
