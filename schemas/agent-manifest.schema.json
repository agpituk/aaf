{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agent-accessibility-framework.dev/schemas/agent-manifest.schema.json",
  "title": "Agent Manifest",
  "description": "Agent Accessibility Framework capability manifest defining site actions, schemas, and policies.",
  "type": "object",
  "required": ["version", "site", "actions"],
  "additionalProperties": false,
  "properties": {
    "@context": {
      "description": "Optional JSON-LD context for semantic interoperability.",
      "oneOf": [
        { "type": "string", "format": "uri" },
        { "type": "object" },
        { "type": "array", "items": { "oneOf": [{ "type": "string", "format": "uri" }, { "type": "object" }] } }
      ]
    },
    "version": {
      "type": "string",
      "description": "Manifest version identifier.",
      "pattern": "^\\d+\\.\\d+$"
    },
    "site": {
      "$ref": "#/definitions/Site"
    },
    "actions": {
      "type": "object",
      "description": "Map of action identifiers to action definitions.",
      "additionalProperties": {
        "$ref": "#/definitions/Action"
      },
      "minProperties": 1
    },
    "errors": {
      "type": "object",
      "description": "Map of error codes to error definitions.",
      "additionalProperties": {
        "$ref": "#/definitions/ErrorDef"
      }
    },
    "pages": {
      "type": "object",
      "description": "Map of route patterns to page definitions, grouping actions by page.",
      "additionalProperties": {
        "$ref": "#/definitions/Page"
      }
    }
  },
  "definitions": {
    "Site": {
      "type": "object",
      "required": ["name", "origin"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "description": "Human-readable site name."
        },
        "origin": {
          "type": "string",
          "format": "uri",
          "description": "Site origin URL."
        },
        "description": {
          "type": "string",
          "description": "LLM-friendly description of the site's capabilities."
        }
      }
    },
    "Page": {
      "type": "object",
      "required": ["title", "actions"],
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string",
          "description": "Human-readable page title."
        },
        "description": {
          "type": "string",
          "description": "LLM-friendly description of the page's purpose."
        },
        "actions": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Action identifiers available on this page."
        }
      }
    },
    "Action": {
      "type": "object",
      "required": ["title", "scope", "risk", "confirmation", "idempotent", "inputSchema", "outputSchema"],
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string",
          "description": "Human-readable action title."
        },
        "description": {
          "type": "string",
          "description": "LLM-friendly description of what this action does."
        },
        "scope": {
          "type": "string",
          "description": "Permission scope required for this action.",
          "pattern": "^[a-z][a-z0-9_.]*$"
        },
        "risk": {
          "type": "string",
          "description": "Risk level for this action.",
          "enum": ["none", "low", "high"]
        },
        "confirmation": {
          "type": "string",
          "description": "Confirmation policy.",
          "enum": ["never", "optional", "review", "required"]
        },
        "idempotent": {
          "type": "boolean",
          "description": "Whether repeated execution is safe."
        },
        "inputSchema": {
          "type": "object",
          "description": "JSON Schema for action input."
        },
        "outputSchema": {
          "type": "object",
          "description": "JSON Schema for action output."
        }
      }
    },
    "ErrorDef": {
      "type": "object",
      "required": ["message"],
      "additionalProperties": false,
      "properties": {
        "message": {
          "type": "string",
          "description": "Human-readable error message."
        }
      }
    }
  }
}
